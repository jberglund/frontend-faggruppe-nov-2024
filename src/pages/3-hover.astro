import Layout from "../layouts/Layout.astro";
---

<script>
  import "../webc/cursor-coordinates";
</script>

<Layout>
  <cursor-coordinates class="fullscreen">
    <div class="cursor"></div>
    <div class="center-content">
      <div class="links">
        <div class="item">
          <h3 class="biiig">lyttere-i-amfiet-500px</h3>
          <img
            class="hover-image"
            src="/public/lyttere-i-amfiet-500px.png"
            alt=""
          />
        </div>

        <div class="item">
          <h3 class="biiig">prosjekt-sikt-1</h3>
          <img class="hover-image" src="/public/prosjekt-sikt-1.png" alt="" />
        </div>

        <div class="item">
          <h3 class="biiig">prosjekt-svv-1</h3>
          <img class="hover-image" src="/public/prosjekt-svv-1.png" alt="" />
        </div>
      </div>
    </div>
  </cursor-coordinates>
</Layout>

<style>
  .fullscreen {
    display: block;
    max-height: 100vh;
    max-width: 100vw;
    background-color: black;
    color: white;
    overflow: hidden;
  }

  .cursor {
    width: 20px;
    height: 20px;
    margin-top: -10px;
    margin-left: -10px;
    position: absolute;
    background-color: red;
    transform: translate(
      calc(var(--cursor-x) * 1px),
      calc(var(--cursor-y) * 1px)
    );
    pointer-events: none;
  }

  .biiig {
    font-size: 4rem;
  }

  .links {
    text-align: center;
  }
