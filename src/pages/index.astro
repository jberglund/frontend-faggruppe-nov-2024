---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

	<script>
      import '../webc/time-variables';

    </script>

<Layout title="Welcome to Astro.">
	<div class="grid">
		<div class="card">
		</div>
	</div>

</Layout>

<style>


.grid{
	width: 100vw;
	height: 100vw;
	display: grid;
	place-items: center;
}

.card	{
	position: relative;
	height: 200px;
	width: 200px;
	background-color: tomato;
	transition: all 300ms ease;
}

.card:hover{
	background-color: black;
	height: 400px;
	left: 50px;
}

</style>